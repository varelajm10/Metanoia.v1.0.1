# Example Terraform variables file for Metanoia v1.0.1
# Copy this file to terraform.tfvars and update the values according to your needs

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"  # dev, staging, prod
project_name = "metanoia"
owner = "Metanoia Team"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# Database Configuration
postgres_version = "15.4"
db_instance_class = "db.t3.small"
db_allocated_storage = 20
db_max_allocated_storage = 100
db_name = "metanoia"
db_username = "metanoia_admin"
db_password = "YourSecurePassword123!"  # Change this to a secure password

# Database Backup Configuration
backup_retention_period = 7
backup_window = "03:00-04:00"
maintenance_window = "sun:04:00-sun:05:00"
multi_az = true

# Database Monitoring
monitoring_interval = 60
performance_insights_enabled = true
deletion_protection = true
skip_final_snapshot = false

# EKS Configuration
kubernetes_version = "1.28"

# Node Group Configuration
node_group_desired_size = 2
node_group_max_size = 4
node_group_min_size = 1
node_group_instance_type = "t3.medium"
node_group_capacity_type = "ON_DEMAND"

# EC2 Key Pair (optional - for SSH access to nodes)
ec2_key_pair_name = ""  # Set this if you want SSH access to EKS nodes
